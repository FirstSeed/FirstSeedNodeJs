//extends ../../../layouts/admin

block head
	title Calls

block neck
	link(rel='stylesheet', type='text/css', href='/views/admin/calls/less/dataTables.min.css')

block feet
	script(type='text/javascript', language='javascript', src='/views/admin/calls/js/jquery.dataTables.min.js')
	script(type='text/javascript', language='javascript', src='/views/admin/calls/js/dataTables.bootstrap.min.js')
	script(type='text/javascript', language='javascript', src='/views/admin/calls/js/calls.min.js')

block body
	div.row
		div.col-xs-12
			div#header
				div.page-header
					h1 Llamados

			div#results-table

	script(type='text/template', id='tmpl-results-table')
		table#calls-results.table.table-striped.table-bordered(cellpadding='0', cellspacing='0', border='0')
			thead
				tr
					th Código
					th Inicio Llamado
					th Fin Llamado
					th Duración (s)
					th Estado
					th Equipo
					th Área
					th Habitación
					th Cama
			tbody#results-rows

	script(type='text/template', id='tmpl-results-row')
		td <%= code %>
		td <%= initDate %>
		td <%= endDate %>
		td <%= time %>
		td <%= attended %>
		td.center <%= equipment %>
		td.center <%= equipmentArea %>
		td <%= equipmentRoom %>
		td <%= equipmentBed %>

	script(type='text/template', id='tmpl-results-empty-row')
		tr
			td(colspan='5') no documents matched

